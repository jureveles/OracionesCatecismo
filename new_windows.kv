<ScreenOne>:
    name: "screen_one"

    canvas.before:
        Rectangle:
            size: self.size
            Color:
                rgba: 0, 1, 1, 1

    ScrollView:
        size: self.size
        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            width: self.minimum_width
            cols: 1
            spacing: "20dp"
            padding: "20dp"
            
            Label:
                line_height: 1.2
                markup: True
                
                text:
                    """[b]Padre Nuestro[/b] \n 
                    Padre Nuestro, 
                    que estás en el cielo,
                    santificado sea tu nombre; 
                    venga a nosotros tu reino; 
                    hágase tu voluntad, 
                    en la tierra como en el cielo.
                    
                    Danos hoy nuestro pan
                    de cada día;  
                    perdona nuestras ofensas, 
                    como también nosotros 
                    perdonamos a los 
                    que nos ofenden; 
                    no nos dejes caer
                    en la tentación, 
                    y líbranos del mal.\n 
                    Amén."""
                                   
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                color: 0, 0, 0, 1
                font_size: self.width/17
    
    
    RelativeLayout:
                    
        TestButton:
            text: ""
            size_hint: (0.18, 0.07)
            pos_hint: {'x':0.31, 'y':0.057}
            on_press:
                app.root.on_button_play("01")  
            on_release:
                app.root.on_button_release("01")         
        Image:
            id: my_image_play
            size_hint_y: None
            height: dp(40)
            pos_hint: {'x':-0.1, 'y':0.06}
            source: '3D_PLAY_01.png'
         
        TestButton:
            text: ""
            size_hint: (0.18, 0.07)
            pos_hint: {'x':0.51, 'y':0.057}
            on_press: 
                app.root.on_button_stop("01")  
            on_release:
                app.root.on_button_release("01s")   

        Image:
            id: my_image_stop
            size_hint_y: None
            height: dp(40)
            pos_hint: {'x':0.1, 'y':0.06}
            source: '3D_STOP_01.png'
            
        TestButton2:
            markup: True
            text: "[b]Regresar[/b]"
            size_hint: (0.9, 0.05)
            pos_hint: {'x':0.05, 'y':0.00}
            font_size: self.width/22
            color: 1, 1, 1, 1 #Text color
            on_press: 
                app.root.stop_sounds_reset("01")
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 0.001
                root.manager.current = "main_screen"
                        

