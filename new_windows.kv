<TestButton@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ""
    canvas.before:
        Color:
            rgba: (48/255, 84/255, 150/255,0) if self.state=='normal' else (0,.7,.7,0)
            #This is the color of the button
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]  #---- This rounds the corners --- #

